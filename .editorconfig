# EditorConfig - Git Mirror

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.{md,markdown}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 2

[*.{conf,config}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
